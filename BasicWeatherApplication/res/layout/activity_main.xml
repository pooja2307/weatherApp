<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.basicweatherapplication.MainActivity"
    tools:ignore="MergeRootFrame" 
    android:background="#FF0099CC">
    
    
    
    <fragment 
        android:id="@+id/mainFragment"
        android:name="com.example.basicweatherapplication.MainActivity$PlaceholderFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/adFragment" />
    
    <fragment
        android:id="@+id/adFragment"
        android:name="com.example.basicweatherapplication.MainActivity$AdFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true" />
    
    
    
    
    </RelativeLayout>

